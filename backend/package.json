{
  "name": "backend",
  "version": "0.23.0",
  "description": "PolkaStats NG Backend",
  "author": "Mario Pino Uceda",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "docker:kusama": "docker-compose -p backend -f docker/docker-compose-kusama.yml up -d",
    "docker:polkadot": "docker-compose -p backend -f docker/docker-compose-polkadot.yml up -d",
    "docker:cere:mainnet": "docker-compose -p backend -f docker/docker-compose-cere-mainnet.yml up -d",
    "docker:cere:mainnet:down": "docker-compose -p backend -f docker/docker-compose-cere-mainnet.yml down",
    "docker:cere:mainnet:logs": "docker-compose -p backend -f docker/docker-compose-cere-mainnet.yml logs",
    "docker:build:kusama": "docker-compose -p backend -f docker/docker-compose-kusama.yml build --no-cache",
    "docker:build:polkadot": "docker-compose -p backend -f docker/docker-compose-polkadot.yml build --no-cache",
    "docker:build:cere:mainnet": "docker-compose -p backend -f docker/docker-compose-cere-mainnet.yml build --no-cache",
    "docker:clean": "bash docker/scripts/clean-dockers.sh",
    "docker:stop": "docker stop backend_api_1 backend_crawler_1 backend_graphql-engine_1 backend_postgres_1",
    "docker:postgres:backup": "docker exec -t backend_postgres_1 pg_dump polkastats -c -U polkastats > polkastats_dump.sql",
    "docker:postgres:restore": "docker stop backend_crawler_1 && cat polkastats_dump.sql | docker exec -i backend_postgres_1 psql -U polkastats -d polkastats && docker restart backend_postgres_1 && docker start backend_crawler_1",
    "db:migrate:create": "db-migrate create -m ../db/migrations --config ../db/database.json",
    "db:migrate:up": "db-migrate up -m ../db/migrations --config ../db/database.json",
    "db:migrate:down": "db-migrate down -m ../db/migrations --config ../db/database.json"
  },
  "dependencies": {
    "@cere-ddc-sdk/smart-contract": "0.5.0",
    "@polkadot/api": "8.2.1",
    "@polkadot/api-contract": "8.2.1",
    "axios": "^0.21.1",
    "bignumber.js": "^9.0.1",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^8.2.0",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "pg-native": "^3.0.0",
    "pino": "^6.7.0"
  },
  "devDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1"
  }
}
